void bonAppetit(vector<int> bill, int k, int b) {
     //b charged= b      k=item not ate  
     //b actual=sum  
    int sum1=0;

      bill[k]=0;

     for (int i=0; i<bill.size(); i++) {
       sum1 += bill[i];
     }
     sum1=sum1/2;
     
     if(b==sum1) cout<< "Bon Appetit";
     
     if(sum1<b) cout<< (b-sum1);
     
}
