vector<int> cutTheSticks(vector<int> arr) {
    vector<int> ans;
    //ans.push_back(arr.size());
    
     while(true){
        int min=INT_MAX;
        for (int i=0;i<arr.size();i++) {
         min=(arr[i]>0 && min>arr[i])? arr[i]:min;
        }
        if (min==INT_MAX) break;  
        int c=0;
        for(int &i:arr) {
            if(i>0) i-=min, c++;
        }
        
        ans.push_back(c);
     }
     return ans;
}
