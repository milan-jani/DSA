
typedef vector<int> vi;
typedef vector<vi> vvi;

#define forn(i,n) for(uint8_t i = 0; i < n; i++)

class Solution {
private:
    void set_row_0(vvi &matrix, int row) { // O(C)
        forn(i,matrix[0].size()) {
            matrix[row][i] = 0;
        }
    }
    void set_col_0(vvi &matrix, int col) { // O(R)
        forn(i,matrix.size()) {
            matrix[i][col] = 0;
        }
    }
      
public:
    void setZeroes(vector<vector<int>>& matrix) {
        // unordered_set<int> rows, cols;
        bool f = 0,f1=0;
        //if(matrix[0][0]==0) flag=1;
        forn(i,matrix.size()) {
            forn(j, matrix[0].size()) {
                if (matrix[i][j] == 0) {
                   if (i==0) f = 1;
                   if(j==0) f1=1;
                    matrix[i][0] = 0;
                    matrix[0][j] = 0;
                }
            }
        }
        forn(i,matrix.size()-1) {
            if (matrix[i+1][0] == 0) {
                set_row_0(matrix, i+1);
            }
        }
        forn(i,matrix[0].size()-1) { 
            if (matrix[0][i+1] == 0) {
                set_col_0(matrix, i+1);
            }
        }
       // cout<<flag;
        if(f){
            set_row_0(matrix,0);
           // set_col_0(matrix,0);
        }
        if(f1){
           // set_row_0(matrix,0);
            set_col_0(matrix,0);
        }
        

    }
};
