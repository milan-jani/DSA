class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        if(head == nullptr) return head;

        int size = 0;
        ListNode* temp = head;
        while(temp){
            size++;
            temp = temp->next;
        }

        if(n == size){
            ListNode* tod = head;
            head = head->next;
            delete tod;
            return head;
        }

        int pos = size - n ; 

        ListNode* prev = head;
        for(int i = 1; i < pos ; i++){
            prev = prev->next;
        }

        ListNode* tod = prev->next;
        prev->next = tod->next;
        delete tod;

        return head;
    }
};
