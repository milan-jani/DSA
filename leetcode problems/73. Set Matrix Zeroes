typedef vector<vector<int>> vvi;
typedef vector<bool> vb;
typedef vector<int> vi;
class Solution {
public:
void set_row(vvi &m, int row){
    for(int i=0;i<m[0].size();i++){
        m[row][i]=0;
    }
}
void set_col(vvi &m, int col){
    for(int i=0;i<m.size();i++){
        m[i][col]=0;
    }
}
    void setZeroes(vvi& m) {
       vb row(m.size(),0) , col(m[0].size(),0);
        for(int i=0;i<m.size();i++){
            for(int j=0;j<m[0].size();j++){
                if(m[i][j]==0) row[i]=1,col[j]=1;
            }
        }
        for (size_t i = 0; i < row.size(); i++) {
            if (row[i]) set_row(m, i);
        }

        for (size_t i = 0; i < col.size(); i++) {
            if (col[i]) set_col(m, i);
}

    }
};
