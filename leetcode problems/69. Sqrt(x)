class Solution {
public:

    int rec(int low,int high,int n){
        if(low>high) return high;
        int mid = low + (high - low) / 2;
        //long long mids=(long long)mid * mid;
        if(mid==n) return mid;
        else if(mid<n/mid)  return rec(mid+1,high,n);
        else return  rec(low,mid-1,n);
       

    }
    int mySqrt(int x) {
        if (x == 0) {
            return 0;
        }

        // int low = 0;
        // int high = x;

        // while (low <= high) {
        //     int mid = low + (high - low) / 2;
        //     long long mids = (long long)mid * mid;

        //     if (mids == x) {
        //         return mid;
        //     } else if (mids < x) {
        //         low = mid + 1;
        //     } else {
        //         high = mid - 1;
        //     }
        // }

        // return high;
        return rec(0,x,x);
    }
};
